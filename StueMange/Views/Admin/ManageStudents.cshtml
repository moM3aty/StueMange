@model IEnumerable<StueMange.Models.Student>
@{
    ViewData["Title"] = "إدارة الطلاب";
}

<div class="page-header">
    <h1 class="page-title">@ViewData["Title"]</h1>
    <a asp-action="CreateStudent" class="btn btn-primary"><i class="bi bi-plus-lg"></i> إضافة طالب جديد</a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="ManageStudents" method="get" class="mb-4">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="ابحث عن طالب بالاسم..." value="@ViewData["CurrentFilter"]">
                <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
                <a asp-action="ManageStudents" class="btn btn-secondary mx-1" style="border-radius:25px;">الكل</a>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.Class)</th>
                        <th>@Html.DisplayNameFor(model => model.StudentType)</th>
                        <th>ولي الأمر</th>
                        <th class="text-center">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Class.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.StudentType)</td>
                            <td>@(item.Parent?.ApplicationUser?.FullName ?? "غير مسجل")</td>
                            <td class="text-center table-actions">
                                <a asp-action="EditStudent" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> تعديل
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

