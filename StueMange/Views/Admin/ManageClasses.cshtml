@model IEnumerable<StueMange.Models.Class>
@{
    ViewData["Title"] = "إدارة الفصول الدراسية";
}

<div class="page-header">
    <h1 class="page-title">@ViewData["Title"]</h1>
    <a asp-action="CreateClass" class="btn btn-primary"><i class="bi bi-plus-lg"></i> إضافة فصل جديد</a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>المدرسون</th>
                        <th class="text-center">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>
                                @if (item.ClassTeachers != null && item.ClassTeachers.Any())
                                {
                                    @string.Join(", ", item.ClassTeachers.Select(ct => ct.Teacher.ApplicationUser.FullName))
                                }
                                else
                                {
                                    <span class="text-muted">لا يوجد مدرسون معينون</span>
                                }
                            </td>
                            <td class="text-center table-actions">
                                <a asp-action="EditClass" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> تعديل
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

