@model AdminDashboardViewModel
@{
    ViewData["Title"] = "لوحة التحكم";
}

<div class="page-header">
    <h1 class="page-title">@ViewData["Title"]</h1>
</div>

<div class="row">
    <div class="col-lg-4 col-md-6 mb-4">
        <a asp-action="ManageClasses" class="text-decoration-none">
            <div class="card stat-card">
                <div class="icon-circle bg-icon-primary">
                    <i class="bi bi-building"></i>
                </div>
                <div class="stat-info">
                    <h5>إجمالي الفصول</h5>
                    <p>@Model.ClassCount</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-4 col-md-6 mb-4">
        <a asp-action="ManageStudents" class="text-decoration-none">
            <div class="card stat-card">
                <div class="icon-circle bg-icon-success">
                    <i class="bi bi-people-fill"></i>
                </div>
                <div class="stat-info">
                    <h5>إجمالي الطلاب</h5>
                    <p>@Model.StudentCount</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-4 col-md-6 mb-4">
        <a asp-action="ManageComplaints" class="text-decoration-none">
            <div class="card stat-card">
                <div class="icon-circle bg-icon-danger">
                    <i class="bi bi-chat-left-dots-fill"></i>
                </div>
                <div class="stat-info">
                    <h5>إجمالي الشكاوى</h5>
                    <p>@Model.ComplaintCount</p>
                </div>
            </div>
        </a>
    </div>
</div>

