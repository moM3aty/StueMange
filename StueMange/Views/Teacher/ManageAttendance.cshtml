@model AttendanceViewModel

@{
    ViewData["Title"] = $"تسجيل حضور فصل {Model.ClassName}";
}

<div class="page-header">
    <h1 class="page-title">@ViewData["Title"]</h1>
    <a asp-action="ClassDetails" asp-route-id="@Model.ClassId" class="btn btn-secondary"><i class="bi bi-arrow-right"></i> عودة للتفاصيل</a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="ManageAttendance" method="post">
            <input type="hidden" asp-for="ClassId" />

            <div class="row align-items-end mb-4">
                <div class="col-md-4">
                    <label asp-for="Date" class="form-label">اختر التاريخ</label>
                    <input asp-for="Date" type="date" class="form-control" onchange="this.form.submit()" />
                </div>
                <div class="col-md-8 text-md-start">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> حفظ الحضور</button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>اسم الطالب</th>
                            <th class="text-center">حاضر؟</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Students.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input type="hidden" asp-for="Students[i].StudentId" />
                                    <input type="hidden" asp-for="Students[i].StudentName" />
                                    @Model.Students[i].StudentName
                                </td>
                                <td class="text-center">
                                    <div class="form-check form-switch d-inline-block">
                                        <input class="form-check-input" type="checkbox" asp-for="Students[i].IsPresent" style="width: 3em; height: 1.5em;">
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </form>
    </div>
</div>

