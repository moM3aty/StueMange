@model IEnumerable<Class>
@{
    ViewData["Title"] = "فصولي الدراسية";
}

<div class="page-header">
    <h1 class="page-title">@ViewData["Title"]</h1>
</div>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var cls in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="bi bi-building text-primary" style="font-size: 3rem;"></i>
                        <h5 class="card-title mt-3">@cls.Name</h5>
                        <p class="card-text text-muted">عرض الطلاب وتسجيل الحضور والدرجات لهذا الفصل.</p>
                        <a asp-action="ClassDetails" asp-route-id="@cls.Id" class="btn btn-primary mt-auto">عرض التفاصيل</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center">
                    <p class="mb-0">لم يتم تعيين أي فصول لك حتى الآن. يرجى مراجعة الإدارة.</p>
                </div>
            </div>
        </div>
    }
</div>

